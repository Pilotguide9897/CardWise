<div id='updateDiv' class='pure-g'>
  <div id='topInput' class='pure-u-1'>
    <h2>Update your cards</h2>
    <label for='name'>Title: </label>
    <input type='text' id='name' name='name' value='{{deckData.name}}' />
    <label for='description'>Description: </label>
    <textarea
      id='description'
      name='description'
      row='4'
      cols='40'
    >{{deckData.description}}</textarea>
    <label for='new_cards_per_day'>Cards each day:</label>
    <input
      type='number'
      id='new_cards_per_day'
      name='new_cards_per_day'
      value='{{deckData.new_cards_per_day}}'
    />
  </div>
</div>
<div id='updateCardsDiv' class='pure-g'>
  <div class='pure-u-1'>

    {{#each deckData.cards as |card|}}
      <div class='pure-g cardDiv updatePartial'>
        <form id='cue-card-form' class='pure-u-1 cardForm editCard'>
          <label for='front'>Term: </label>
          <input type='text' id='front' name='front' value='{{card.front}}' />
          <label for='back'>Definition: </label>
          <input type='text' id='back' name='back' value='{{card.back}}' />
          <button class='delCard'>Delete</button>
        </form>
      </div>
    {{/each}}
  </div>
  <div id='updateBtnDiv' class='pure-u-1'>
    <button id='deleteBtn'>Delete</button>
    <button id='updateDeck'>Update Deck</button>
  </div>
</div>

<script src='/js/update.js'></script>
<script src='/js/delete.js'></script>