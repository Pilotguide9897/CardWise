<div id="dashboardCont" class="pure-g">
  <!--Welcome part -->
  <div id="welcomeDiv" class="pure-u-1-3">
    <h2> Welcome {{userData.name}}</h2>
    <div id="todayDeck">

      <h3>Review all Cards:</h3>
      <button 
        id="todaysDeck" 
        class="reviewBtn" 
        {{#unless userData.totalQueued}}disabled{{/unless}}
        onclick="window.location = '/review/all'">
        {{#if userData.totalQueued}}<div><span>{{{userData.totalQueued}}}</span></div>{{/if}}
          Review
      </button>
    </div>
        {{#unless userData.totalQueued}}<p>Come back tomorrow for more cards!</p>{{/unless}}
  </div>
  <!-- Loads each deck from the user from a partial -->
  <div id="decksDiv" class="pure-u-2-3">
    {{#each userData.decks as |deck|}}
    {{>dashboardDeckCard}}
    {{/each}}

    <button id="createDeck" onclick="window.location = '/create'">Create Deck</button>
  </div>
</div>



