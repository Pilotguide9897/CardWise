<div id="dashboardCont" class="pure-g">
  <!--Welcome part -->
  <div id="welcomeDiv" class="pure-u-1-3">
    <h2> Welcome {{userData.name}}</h2>
    <div id="todayDeck">
      <h3>Today's Deck:</h3>
      
      <button id="todaysDeck" onclick="window.location = '/review/all'">Review all Cards</button>
    </div>
  </div>
  <!-- Loads each deck from the user from a partial -->
  <div id="decksDiv" class="pure-u-2-3">
    {{#each userData.decks as |deck|}}
    {{>dashboardDeckCard}}
    {{/each}}

    <button id="createDeck" onclick="window.location = '/create'">Create Deck</button>
  </div>
</div>



